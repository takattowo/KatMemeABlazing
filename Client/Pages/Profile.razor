@page "/profile"
@using KatMemeABlazing.Shared.Models
@inject HttpClient Http

<h1>Weather forecast</h1>

<p>This component demonstrates fetching data from the server.</p>

@code {

    private KatUserUpdate _katUserUpdate = new KatUserUpdate();

    private async Task UpdateSucc()
    {
        KatUser user = _katUserUpdate;
        await Http.PutAsJsonAsync<KatUser>("katuser/updateprofile/1", user);
        _katUserUpdate.Message = "Profile settings updated!";
    }

    private async Task GetProfile()
    {
        KatUser user = await Http.GetFromJsonAsync<KatUser>("katuser/getprofile/1");
        _katUserUpdate = user;
        _katUserUpdate.Message = "Profile looaded!";
    }

}
